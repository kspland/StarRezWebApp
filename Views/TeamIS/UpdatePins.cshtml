
 @using RL.Models;

@model  IEnumerable<Pins>
@{
    ViewBag.Title = "UpdatePins";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UpdatePins</h2>

<body>
    <div>
        <p>This program adds and update card access pins via a CSV file. A new pin will be generated and added to StarRez. </p>
        <p>An example of how the CSV file is listed below. </p>
        <p><Bold>The Column names must be named exactly like the example and in the same order.</Bold></p>
    </div>

    <div>
        <div>
            <table class="table table-bordered table-hover">
                <tr>
                    <th>EntryID</th>
                    <th>PreviousPin</th>
                    <th>NewPin</th>
                    <th>Status</th>

                </tr>
                <tr>
                    <td>50200</td>
                    <td>1220</td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td>29786</td>
                    <td>7274</td>
                    <td></td>
                    <td></td>

                </tr>
                <tr>
                    <td>71345</td>
                    <td>1086</td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td>62591</td>
                    <td></td>
                    <td></td>
                    <td></td>

                </tr>
            </table>
        </div>

    </div>

    <div>
        <hr />
        <br />
        @using (Html.BeginForm("UpdatePins", "TeamIS", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <input type="file" name="postedFile" />
            <input type="submit" value="Import" />
            <p>Enter your PawsID <input type="text" name="username" /></p>
            <p>Enter your Password<input type="password" name="password" /></p>
        }
    </div>

    <div>

        @if (Model.Count() > 0)
        {

            <table class="table table-bordered table-bordered">
                <tr>
                    <th>EntryID</th>
                    <th>Previous Pin</th>
                    <th>New Pin</th>
                    <th>Status</th>
                </tr>

                @foreach (Pins p in Model)
                {
                    <tr>
                        <td>@p.EntryID</td>
                        <td>@p.PreviousPin</td>
                        <td>@p.NewPin</td>
                        <td>@p.Status</td>
                    </tr>

                }

            </table>
        }
    </div>
    <div>
       
    </div>
</body>
