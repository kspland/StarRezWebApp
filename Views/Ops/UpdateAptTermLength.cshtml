@using RL.Models;
@model IEnumerable<AddAptTermLen>


@{
    ViewBag.Title = "UpdateAptTermLength";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UpdateAptTermLength</h2>

<body>
    <div>
        <p>This program  adds the Apartment Term Length to the Entry Application via a CSV file. </p>
        <p>An example of how the CSV file is listed below. </p>
        <p><Bold>The Column names must be named exactly like the example and in the same order.</Bold></p>
    </div>

    <div>
        <table class="table table-bordered table-hover">
            <tr>
                <th>EntryApplicationID</th>
                <th>EntryID</th>
                <th>TermLength</th>
                <th>TermDescription</th>
                <th>Status</th>

            </tr>
            <tr>
                <td>11129</td>
                <td>60234</td>
                <td>9</td>
                <td>Undergraduate Housing 2022 Spring</td>
                <td></td>
            </tr>
            <tr>
                <td>95345</td>
                <td>56789</td>
                <td>9</td>
                <td>Undergraduate Housing 2022 Spring</td>
                <td></td>
            </tr>
            <tr>
                <td>94921</td>
                <td>1575</td>
                <td>12</td>
                <td>Undergraduate Housing 2022 Spring</td>
                <td></td>
            </tr>
            <tr>
                <td>164098</td>
                <td>65444</td>
                <td>9</td>
                <td>Undergraduate Housing 2022 Spring</td>
       
                <td></td>
            </tr>
        </table>
    </div>

    <div>
        <hr />
        <br />
        @using (Html.BeginForm("UpdateAptTermLength", "Ops", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <input type="file" name="postedFile" />
            <input type="submit" value="Import" />
            <p>Enter your PawsID <input type="text" name="username" /></p>
            <p>Enter your Password<input type="password" name="password" /></p>
        }
    </div>
    <div>
        @if (Model.Count() > 0)
        {

            <table class="table table-bordered table-bordered">
                <tr>
                    <th>Entry Application ID</th>
                    <th>Entry ID</th>
                    <th>Term Length</th>
                    <th>Term Description</th>
                    <th>Status</th>
                </tr>

                @foreach (AddAptTermLen A in Model)
                {
                    <tr>
                        <td>@A.EntryApplicationID</td>
                        <td>@A.EntryID</td>
                        <td>@A.TermLength</td>
                        <td>@A.TermDescription</td>
                        <td>@A.Status</td>
                    </tr>

                }

            </table>
        }
    </div>

</body>