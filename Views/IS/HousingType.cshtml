@using RL.Models;

@model IEnumerable<AddHType>

@{
    ViewBag.Title = "HousingType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>HousingType</h2>

<body>
    <div>
        <p>This program  adds the Housing Type to the Entry Application via a CSV file. </p>
        <p>An example of how the CSV file is listed below. </p>
        <p><Bold>The Column names must be named exactly like the example and in the same order.</Bold></p>
        <p><Bold> A is for EdGay and R is for all students in Reshalls, ECA, WCA, APA, and NGW </Bold></p>
    </div>

    <div>
        <table class="table table-bordered table-hover">
            <tr>
                <th>EntryApplicationID</th>
                <th>EntryID</th>
                <th>HousingType</th>
                <th>RoomSpace</th>
                <th>Status</th>

            </tr>
            <tr>
                <td>114086</td>
                <td>45506</td>
                <td>R</td>
                <td>Canal 5004-A</td>
                <td></td>
            </tr>
            <tr>
                <td>114090</td>
                <td>45506</td>
                <td>R</td>
                <td>East Campus 0309C-1</td>
                <td></td>
            </tr>
            <tr>
                <td>113773</td>
                <td>40225</td>
                <td>R</td>
                <td>West Campus 1207A-1</td>
                <td></td>
            </tr>
            <tr>
                <td>113105</td>
                <td>31427</td>
                <td>R</td>
                <td>Spruce 1410-1 </td>
                <td></td>
            </tr>
        </table>
    </div>

    <div>
        <hr />
        <br />
        @using (Html.BeginForm("HousingType", "IS", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <input type="file" name="postedFile" />
            <input type="submit" value="Import" />
            <p>Enter your PawsID <input type="text" name="username" /></p>
            <p>Enter your Password<input type="password" name="password" /></p>
        }
    </div>

    <div>
        @if(Model.Count() > 0)
        {

            <table class="table table-bordered table-bordered">
                <tr>
                    <th>Entry Application ID</th>
                    <th>Entry ID</th>
                    <th>Housing Type</th>
                    <th>RoomSpace</th>
                    <th>Status</th>
                </tr>

                @foreach (AddHType E in Model)
                {
                    <tr>
                        <td>@E.EntryApplicationID</td>
                        <td>@E.EntryID</td>
                        <td>@E.HousingType</td>
                        <td>@E.RoomSpace</td>
                        <td>@E.Status</td>
                    </tr>

                }

            </table>
        }
    </div>
</body>