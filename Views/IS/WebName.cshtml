
@using RL.Models;

@model  IEnumerable<WebName>
@{
    ViewBag.Title = "WebName";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>WebName</h2>

<body>
    <div>
        <p>This program addes missing webnames to the Entry via a CSV file. </p>
        <p>An example of how the CSV file is listed below. </p>
        <p><Bold>The Column names must be named exactly like the example and in the same order.</Bold></p>
    </div>
    <div>
        <p>
            This application adds the WebName to the Entry. It uses a CSV file containing the
            EntryID, EntryStatus, PAWSID and Status. The Headings must be spelled and placed in the correct order.

        </p>
    </div>
    <div>
        <table class="table table-bordered table-hover">
            <tr>
                <th>EntryID</th>
                <th>EntryStatus</th>
                <th>PAWSID</th>
                <th>Status</th>

            </tr>
            <tr>
                <td>62581</td>
                <td>80</td>
                <td>mtiger</td>
                <td></td>
            </tr>
            <tr>
                <td>6593</td>
                <td>5</td>
                <td>bbengal</td>
                <td></td>
            </tr>
            <tr>
                <td>9947</td>
                <td>80</td>
                <td>mtiger1</td>
                <td></td>
            </tr>
        </table>
    </div>

    <div>
        <hr />
        <br />
        @using (Html.BeginForm("WebName", "IS", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <input type="file" name="postedFile" />
            <input type="submit" value="Import" />
            <p>Enter your PawsID <input type="text" name="username" /></p>
            <p>Enter your Password<input type="password" name="password" /></p>
        }
    </div>

    <div>
        @if (Model.Count() > 0)
        {
            <div>
                <table class="table table-bordered table-hover">
                    <tr>
                        <th>EntryID</th>
                        <th>PawsID</th>
                        <th>Status</th>
                    </tr>

                    @foreach (WebName W in Model)
                    {
                        <tr>
                            <td>@W.EntryID</td>
                            <td>@W.PAWSID</td>
                            <td>@W.Status</td> 
                        </tr>

                    }

                </table>

            </div>
        }
    </div>
</body>