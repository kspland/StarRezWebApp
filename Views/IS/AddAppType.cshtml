@using RL.Models;

@model IEnumerable<AddAppType>

@{
    ViewBag.Title = "AddAppType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddAppType</h2>

<body>
    <div>
        <p>This program  adds the Appliation Type to the Entry Application via a CSV file. </p>
        <p>An example of how the CSV file is listed below. </p>
        <p><Bold>The Column names must be named exactly like the example and in the same order.</Bold></p>
    </div>

    <div>
        <table class="table table-bordered table-hover">
            <tr>
                <th>EntryApplicationID</th>
                <th>EntryID</th>
                <th>Application-Type</th>
                <th>Classification</th>
                <th>Status</th>

            </tr>
            <tr>
                <td>11129</td>
                <td>60234</td>
                <td>UGF</td>
                <td>New</td>
                <td></td>
            </tr>
            <tr>
                <td>95345</td>
                <td>56789</td>
                <td>UGT</td>
                <td>Continuing</td>
                <td></td>
            </tr>
            <tr>
                <td>94921</td>
                <td>1575</td>
                <td>UGT</td>
                <td>Continuing</td>
                <td></td>
            </tr>
            <tr>
                <td>164098</td>
                <td>65444</td>
                <td>UGF</td>
                <td>New</td>
                <td></td>
            </tr>
        </table>
    </div>

    <div>
        <hr />
        <br />
        @using (Html.BeginForm("AddAppType", "IS", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <input type="file" name="postedFile" />
            <input type="submit" value="Import" />
            <p>Enter your PawsID <input type="text" name="username" /></p>
            <p>Enter your Password<input type="password" name="password" /></p>
        }
    </div>
    <div>
        @if(Model.Count() > 0)
        {
            <div>
                <table class="table table-bordered table-hover">
                    <tr>
                        <th>Entry Application ID</th>
                        <th>EntryID</th>
                        <th>Application Type</th>
                        <th>Classification</th>
                        <th>Status</th>
                    </tr>
                 
                        @foreach( AddAppType A in Model)
                        {
                            <tr>
                                <td>@A.EntryApplicationID</td>
                                <td>@A.EntryID</td>
                                <td>@A.ApplicationType</td>
                                <td>@A.Classification</td>
                                <td>@A.Status</td>
                            </tr>
                           
                        }
                  
                </table>
            </div>
        }
    </div>
</body>