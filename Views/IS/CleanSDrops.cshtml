@using RL.Models;

@model IEnumerable<CleanSD>
@{
    ViewBag.Title = "CleanSDrops";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CleanSDrops</h2>

<body>
    <div>
        <p>This program  removes SD students via a CSV file. </p>
        <p>An example of how the CSV file is listed below. </p>
        <p><Bold>The Column names must be named exactly like the example and in the same order.</Bold></p>
        <p><Bold>  </Bold></p>
    </div>

    <div>
        <table class="table table-bordered table-hover">
            <tr>
                <th>EntryID</th>
                <th>ScholasticDrop</th>
                <th>Status</th>

            </tr>
            <tr>
                <td>60234</td>
                <td>TRUE</td>
        
            </tr>
            <tr>
                <td>56789</td>
                <td>TRUE</td>
                <td></td>

            </tr>
            <tr>
                <td>1575</td>
                <td>TRUE</td>
                <td></td>
          
            </tr>
            <tr>
                <td>65444</td>
                <td>TRUE</td>
                <td></td>
            </tr>
        </table>
    </div>
    <div>
        <hr />
        <br />
        @using (Html.BeginForm("CleanSDrops", "IS", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <input type="file" name="postedFile" />
            <input type="submit" value="Import" />
            <p>Enter your PawsID <input type="text" name="username" /></p>
            <p>Enter your Password<input type="password" name="password" /></p>
        }
    </div>

    <div>
        @if (Model.Count() > 0)
        {

            <table class="table table-bordered table-bordered">
                <tr>
                    <th>Entry ID</th>
                    <th>Scholastic drop</th>
                    <th>Classification</th>
                    <th>Status</th>
                </tr>

                @foreach (CleanSD c in Model)
                {
                    <tr>
                        <td>@c.EntryID</td>
                        <td>@c.ScholasticDrop</td>
                        <td>@c.Status</td>
                    </tr>

                }

            </table>
        }
    </div>

</body>