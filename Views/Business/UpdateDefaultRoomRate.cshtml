@using RL.Models;

@model IEnumerable<UpdateDefRR>

@{
    ViewBag.Title = "UpdateDefaultRoomRate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UpdateDefaultRoomRate</h2>


<body>
    <div>
        <p>This program  updates the Default Room rate and Default Room Code on a RoomSpace Customfield via a CSV file. </p>
        <p>An example of how the CSV file is listed below. </p>
        <p><Bold>The Column names must be named exactly like the example and in the same order.</Bold></p>
    </div>

    <div>
        <div>
            <table class="table table-bordered table-hover">
                <tr>
                    <th>Building</th>
                    <th>RoomSpaceID</th>
                    <th>RoomSpaceDescription</th>
                    <th>RoomType</th>
                    <th>DefaultRoomCode</th>
                    <th>DefaultRoomRate</th>
                    <th>Status</th>

                </tr>
                <tr>
                    <td>Acadian Hall</td>
                    <td>6</td>
                    <td>Acdian 0124-1</td>
                    <td>2H</td>
                    <td>RA2 RH TD 2-Hall-ACD</td>
                    <td>3520.00</td>
                    <td></td>
                </tr>
                <tr>
                    <td>Cedar Hall</td>
                    <td>13513</td>
                    <td>Cedar 1109A-1</td>
                    <td>2P</td>
                    <td>NP2L NR RH TD LRG 2-Private-CDR</td>
                    <td>4235.00</td>
                    <td></td>

                </tr>
                <tr>
                    <td>Broussard Hall</td>
                    <td>7132</td>
                    <td>Broussard Hall 0134-1</td>
                    <td>1BR</td>
                    <td>STAF Staff Room-BRO</td>
                    <td>0.00</td>
                    <td></td>
                </tr>
                <tr>
                    <td>Blake Hall</td>
                    <td>460</td>
                    <td>Blake 0155-1</td>
                    <td>2P</td>
                    <td>NP2 NR RC 2-Private-BLA</td>
                    <td>4,405.00</td>
                    <td></td>

                </tr>
            </table>
        </div>

    </div>

    <div>
        <hr />
        <br />
        @using (Html.BeginForm("UpdateDefaultRoomRate", "Business", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <input type="file" name="postedFile" />
            <input type="submit" value="Import" />
            <p>Enter your PawsID <input type="text" name="username" /></p>
            <p>Enter your Password<input type="password" name="password" /></p>
        }
    </div>

    <div>

        @if (Model.Count() > 0)
        {

            <table class="table table-bordered table-bordered">
                <tr>
                    <th>Building</th>
                    <th>RoomSpace ID</th>
                    <th>Room Space Description</th>
                    <th>Default Room Rate</th>
                    <th>Default Room Code</th>
                    <th>Room Type</th>
                    <th>Status</th>
                </tr>

                @foreach (UpdateDefRR R in Model)
                {
                    <tr>
                        <td>@R.Building</td>
                        <td>@R.RoomSpaceID</td>
                        <td>@R.RoomSpaceDescription</td>
                        <td>@R.DefaultRoomRate</td>
                        <td>@R.DefaultRoomCode</td>
                        <td>@R.RoomType</td>
                        <td>@R.Status</td>
                    </tr>

                }

            </table>
        }
    </div>
</body>
