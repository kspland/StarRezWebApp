@using RL.Models;

@model IEnumerable<TDescription>

@{
    ViewBag.Title = "TransactionCommentUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>TransactionCommentUpdate</h2>


<body>
    <div>
        <p>This program  updates the Descripton on a Transaction via a CSV file. </p>
        <p>An example of how the CSV file is listed below. </p>
        <p><Bold>The Column names must be named exactly like the example and in the same order.</Bold></p>
    </div>

    <div>
        <div>
            <table class="table table-bordered table-hover">
                <tr>
                    <th>TransactionID</th>
                    <th>EntryID</th>
                    <th>Description</th>
                    <th>Status</th>

                </tr>
                <tr>
                    <td>11129</td>
                    <td>60234</td>
                    <td>Aug charge for room EdGay 3245-A1 for 30 night(s) at $765.00/p/30 Day Month</td>
                    <td></td>
                </tr>
                <tr>

                    <td>95345</td>
                    <td>56789</td>
                    <td>Active</td>
                    <td></td>
                </tr>
                <tr>
                    <td>94921 </td>
                    <td>1575</td>
                    <td>Continuing Student Advance Rent Payment #35065</td>
                    <td></td>
                </tr>
                <tr>

                    <td>65444</td>
                    <td>164098</td>
                    <td>Exemption Approved</td>
                    <td></td>
                </tr>
            </table>
        </div>

    </div>

    <div>
        <hr />
        <br />
        @using (Html.BeginForm("TransactionCommentUpdate", "Business", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <input type="file" name="postedFile" />
            <input type="submit" value="Import" />
            <p>Enter your PawsID <input type="text" name="username" /></p>
            <p>Enter your Password<input type="password" name="password" /></p>
        }
    </div>

    <div>

        @if (Model.Count() > 0)
        {

            <table class="table table-bordered table-bordered">
                <tr>
                    <th>Transaction ID</th>
                    <th>Entry ID</th>
                    <th>Description</th>
                    <th>Status</th>
                </tr>

                @foreach (TDescription T in Model)
                {
                    <tr>
                        <td>@T.TransactionID</td>
                        <td>@T.EntryID</td>
                        <td>@T.Description</td>
                        <td>@T.Status</td>
                    </tr>

                }

            </table>
        }
    </div>
</body>
